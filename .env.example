# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/sofascore_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sofascore_db
DB_USER=username
DB_PASSWORD=password

# AWS S3 Configuration (for raw data storage)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=sofascore-raw-data
S3_BUCKET_PREFIX=data/

# SofaScore API Configuration
SOFASCORE_BASE_URL=https://api.sofascore.com/api/v1
SOFASCORE_USER_AGENT=Mozilla/5.0 (compatible; SofaScore-Pipeline/1.0)
SOFASCORE_RATE_LIMIT_REQUESTS=60
SOFASCORE_RATE_LIMIT_PERIOD=60
SOFASCORE_TIMEOUT=30

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/sofascore_pipeline.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Scheduler Configuration
SCHEDULER_TYPE=cron
AIRFLOW_HOME=/opt/airflow
AIRFLOW_DAGS_FOLDER=dags/

# Data Quality Configuration
DATA_QUALITY_CHECK_INTERVAL=3600
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_FACTOR=2

# Monitoring & Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
ALERT_RECIPIENTS=admin@yourcompany.com

# Development/Production Environment
ENVIRONMENT=development
DEBUG=true
TESTING=false

# Storage Options
STORAGE_BACKEND=postgresql  # options: postgresql, mongodb, both
RAW_DATA_STORAGE=s3  # options: s3, filesystem, both

# Pipeline Configuration
SCRAPE_INTERVAL_LIVE=60  # seconds
SCRAPE_INTERVAL_FINISHED=3600  # seconds
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=5

# Match Filters
COMPETITIONS=premier-league,champions-league,serie-a,la-liga,bundesliga
MIN_MATCH_IMPORTANCE=3  # 1-5 scale
INCLUDE_FRIENDLIES=false