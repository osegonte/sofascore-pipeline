{
  "rolling_windows": [5, 10, 15],
  "historical_matches": 10,
  "momentum_window": 10,
  "goal_prediction_windows": [1, 5, 10, 15],
  "min_data_points": 3,
  "feature_selection": {
    "correlation_threshold": 0.05,
    "variance_threshold": 0.01,
    "max_features": 100,
    "selection_methods": ["correlation", "variance", "mutual_info"]
  },
  "data_split": {
    "method": "temporal",
    "train_ratio": 0.7,
    "val_ratio": 0.15,
    "test_ratio": 0.15,
    "stratify_by": "competition"
  },
  "scaling": {
    "method": "z_score",
    "exclude_features": ["match_id", "home_team_id", "away_team_id", "minute"],
    "clip_outliers": true,
    "outlier_threshold": 3.0
  },
  "export_formats": ["csv", "parquet", "tensorflow", "sklearn"],
  "output_directory": "data/ml_datasets",
  "feature_cache_size": 1000,
  "batch_size": 50,
  "max_concurrent_matches": 5,
  "performance": {
    "enable_multiprocessing": true,
    "max_workers": 4,
    "chunk_size": 100
  },
  "quality_checks": {
    "completeness_threshold": 0.95,
    "consistency_threshold": 0.98,
    "validity_threshold": 0.95
  }
}
