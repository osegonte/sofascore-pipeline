{
  "model_templates": {
    "xgboost_classifier": {
      "model_type": "classification",
      "target_features": ["goal_next_5min_any", "goal_next_15min_any"],
      "parameters": {
        "n_estimators": 100,
        "max_depth": 6,
        "learning_rate": 0.1,
        "subsample": 0.8,
        "colsample_bytree": 0.8
      },
      "evaluation_metrics": ["accuracy", "precision", "recall", "f1", "auc"]
    },
    "random_forest_classifier": {
      "model_type": "classification",
      "target_features": ["goal_next_1min_any", "goal_next_5min_any"],
      "parameters": {
        "n_estimators": 200,
        "max_depth": 10,
        "min_samples_split": 5,
        "min_samples_leaf": 2
      },
      "evaluation_metrics": ["accuracy", "precision", "recall", "f1"]
    }
  },
  "feature_groups": {
    "basic": ["current_score_home", "current_score_away", "minute", "score_difference"],
    "rolling_stats": ["*_goals_last_*min", "*_shots_last_*min", "*_possession_*"],
    "probabilities": ["*_goal_prob_*", "*_pressure_*"],
    "team_performance": ["*_recent_*", "*_h2h_*", "*_venue_*"],
    "match_context": ["match_importance", "*_substitutions", "*_tactical_*"]
  }
}
