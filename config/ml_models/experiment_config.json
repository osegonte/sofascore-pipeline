{
  "experiment_tracking": {
    "enabled": true,
    "storage_path": "data/models/experiments",
    "auto_save": true,
    "version_models": true
  },
  "model_storage": {
    "base_path": "data/models/saved_models",
    "format": "joblib",
    "compression": true,
    "metadata_format": "json"
  },
  "performance_monitoring": {
    "enabled": true,
    "metrics_window": 1000,
    "drift_detection": {
      "enabled": true,
      "method": "ks_test",
      "threshold": 0.05
    },
    "retraining_triggers": {
      "performance_drop": 0.05,
      "data_drift": true,
      "time_based": "weekly"
    }
  },
  "api_config": {
    "host": "0.0.0.0",
    "port": 8001,
    "debug": false,
    "cors_enabled": true,
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 100
    }
  }
}
